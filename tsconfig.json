{
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "declaration": true,
        "rootDirs": ["./src"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*"]
}
